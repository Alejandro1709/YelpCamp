<% layout('layouts/boilerplate') %>
<h1>Register</h1>
<form action="/register" method="POST" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username:</label>
    <input
      name="username"
      class="form-control"
      type="text"
      id="username"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="email">Email:</label>
    <input name="email" class="form-control" type="email" id="email" required />
    <div class="valid-feedback">Looks good!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">Password:</label>
    <input
      name="password"
      class="form-control"
      type="password"
      id="password"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>
  <button class="btb btn-success">Register</button>
</form>
